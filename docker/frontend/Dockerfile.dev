# docker/frontend/Dockerfile.dev
# Dev container for TrafficJamz frontend with Vite + shared modules

FROM node:18-alpine

WORKDIR /app

# ğŸ›  System tools for native packages
RUN apk add --no-cache python3 make g++ curl

# ğŸ“¦ Install deps with cache optimization
COPY package*.json ./
RUN npm install --legacy-peer-deps

# ğŸ¯ Source code
COPY ./src ./src
COPY ./public ./public
COPY ../shared ./shared

# ğŸŒ± Dev env
ENV NODE_ENV=development
ENV REACT_APP_API_URL=http://localhost:5000
ENV REACT_APP_WEBRTC_URL=http://localhost:5000

# ğŸ”Š Port for Vite dev server
EXPOSE 8080

# ğŸŒ Optional NGINX override for TLS
COPY nginx.dev.conf /etc/nginx/nginx.dev.conf
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

CMD ["npm", "start"]
