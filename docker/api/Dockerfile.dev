# Development Dockerfile for the TrafficJamz frontend service

FROM node:18-alpine

WORKDIR /app

# ğŸ”§ Install dev tools
RUN apk add --no-cache python3 make g++ curl

# ğŸ“¦ Copy dependencies
COPY package*.json ./
RUN npm install --legacy-peer-deps

# ğŸ“ Copy app source and public assets
COPY src ./src
COPY public ./public
COPY ../shared ./shared

# ğŸŒ Dev environment variables
ENV NODE_ENV=development
ENV IS_LOCAL=true
ENV VITE_API_BASE=http://backend:5000/api

EXPOSE 3000

# ğŸš€ Launch Vite dev server
CMD ["npm", "run", "dev"]
