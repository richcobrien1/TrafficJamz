# Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trafficjamz
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

MONGODB_URI=mongodb://localhost:27017/trafficjamz

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this

# CORS
CORS_ORIGIN_DEV=http://localhost:5175
CORS_ORIGIN_PROD=http://localhost:8080

# Email Service (Brevo/SendinBlue)
EMAIL_ENABLED=true
BREVO_API_KEY=your_brevo_api_key
EMAIL_FROM=noreply@trafficjamz.com
EMAIL_FROM_NAME=TrafficJamz

# SMS Service - Choose one provider
# OPTION 1: Twilio (requires phone verification)
SMS_PROVIDER=twilio
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+12025551234

# OPTION 2: Vonage/Nexmo (email only, no phone required) - RECOMMENDED
# SMS_PROVIDER=vonage
# SMS_ENABLED=false
# VONAGE_API_KEY=your_vonage_api_key
# VONAGE_API_SECRET=your_vonage_api_secret
# VONAGE_BRAND_NAME=TrafficJamz

# Frontend URL (for invitation links)
FRONTEND_URL=http://localhost:5175

# WebRTC/MediaSoup
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=trafficjamz
INFLUXDB_BUCKET=locations

# AWS (if using S3 for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=trafficjamz-uploads

# Cloudflare R2 Storage (recommended for music files)
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_MUSIC=music
R2_PUBLIC_URL=https://your-bucket.r2.dev
R2_REGION=auto

# Supabase Storage (for profile images)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Feature Flags
DISABLE_AUDIO_SIGNALING=false

# Music Platform Integrations
# Spotify API (https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://trafficjamz.v2u.us/api/integrations/auth/spotify/callback

# YouTube Data API v3 (https://console.cloud.google.com/)
YOUTUBE_API_KEY=your_youtube_api_key

# Apple Music API (https://developer.apple.com/)
APPLE_MUSIC_TEAM_ID=your_team_id
APPLE_MUSIC_KEY_ID=your_key_id
APPLE_MUSIC_PRIVATE_KEY_PATH=./certs/AuthKey_XXXXXXXXXX.p8
