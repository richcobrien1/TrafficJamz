# docker/frontend/Dockerfile.prod
# Dockerfile for building and serving the React/Vite frontend application

# ─── Stage 1: Build ─────────────────────────────────────────────────────

FROM node:18-alpine AS builder

WORKDIR /app

# 📦 Install dependencies
COPY package*.json ./
RUN npm ci

# 📁 Copy source code and shared modules
COPY ./src ./src
COPY ./public ./public
COPY ../shared ./shared

# 🌐 Set build-time environment variables
ENV NODE_ENV=production
ENV REACT_APP_API_URL=/api
ENV REACT_APP_WEBRTC_URL=/webrtc

# 🏗️ Build the Vite application
RUN npm run build

# ─── Stage 2: Serve with NGINX ───────────────────────────────────────────

FROM nginx:stable-alpine

WORKDIR /usr/share/nginx/html

# 🚚 Copy compiled build from builder stage
COPY --from=builder /app/dist .

# ⚙️ Inject custom NGINX configs
COPY nginx.conf /etc/nginx/nginx.conf
COPY nginx.dev.conf /etc/nginx/nginx.dev.conf

# 🔐 TLS-aware entrypoint script
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

CMD ["/entrypoint.sh"]

EXPOSE 80
EXPOSE 443
