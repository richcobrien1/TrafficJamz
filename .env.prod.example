# .env.prod.example
# Production environment variables for the TrafficJamz application
# COPY THIS FILE TO .env.prod AND FILL IN YOUR ACTUAL VALUES

# ────── API & Server ─────────────────────────────
API_VERSION=v1
NODE_ENV=production
PORT=5000

# ────── React Frontend ───────────────────────────
REACT_APP_API_URL=https://your-api-url.com
REACT_APP_WEBRTC_URL=https://your-webrtc-url.com

# ────── PostgreSQL (Supabase DB) ─────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SUPABASE_DB_PASSWORD   # Get from Supabase dashboard
POSTGRES_DB=postgres
POSTGRES_HOST=db.YOUR_SUPABASE_PROJECT.supabase.co
POSTGRES_PORT=5432
PGSSLMODE=require

# ────── MongoDB (Atlas) ──────────────────────────
# If your password contains special characters, percent‑encode them
# Example: Top$Gun!23 → Top%24Gun%2123
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/?retryWrites=true&w=majority&ssl=true&appName=yourapp

# ────── Redis ────────────────────────────────────
REDIS_HOST=your-cloud-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ────── InfluxDB ─────────────────────────────────
INFLUXDB_BUCKET=trafficjam
INFLUXDB_ORG=V2U
INFLUXDB_TOKEN=YOUR_INFLUXDB_TOKEN
INFLUXDB_URL=https://us-east-1-1.aws.cloud2.influxdata.com

# ────── Kafka ────────────────────────────────────
KAFKA_BROKERS=your-cloud-kafka-brokers
KAFKA_CLIENT_ID=audiogroupapp
KAFKA_GROUP_ID=audiogroupapp-group

# ────── WebRTC / MediaSoup ───────────────────────
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_MIN_PORT=10000
MEDIASOUP_MAX_PORT=10100
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_credential
