# docker/frontend/Dockerfile.prod
# Dockerfile for building and serving the React/Vite frontend application

# â”€â”€â”€ Stage 1: Build â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

FROM node:18-alpine AS builder

WORKDIR /app

# ğŸ“¦ Install dependencies from package.json and lock file
COPY package*.json ./
RUN npm ci

# ğŸ“ Copy source code and static assets (located at project root)
COPY src ./src
COPY public ./public

# ğŸŒ Set build-time environment variables
ENV NODE_ENV=production
ENV REACT_APP_API_URL=/api
ENV REACT_APP_WEBRTC_URL=/webrtc

# ğŸ—ï¸ Build the Vite application
RUN npm run build

# â”€â”€â”€ Stage 2: Serve with NGINX â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

FROM nginx:stable-alpine

WORKDIR /usr/share/nginx/html

# ğŸšš Copy compiled build from builder stage
COPY --from=builder /app/dist .

# âš™ï¸ Inject custom NGINX configs (located at project root)
COPY nginx.conf /etc/nginx/nginx.conf
COPY nginx.dev.conf /etc/nginx/nginx.dev.conf

# ğŸ” TLS-aware entrypoint script (shared across services)
COPY scripts/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# ğŸš€ Launch container using dynamic NGINX config selection
CMD ["/entrypoint.sh"]

# ğŸŒ Expose HTTP and HTTPS ports
EXPOSE 80
EXPOSE 443
