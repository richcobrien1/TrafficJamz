# Production Dockerfile for the TrafficJamz API service

FROM node:18-alpine

WORKDIR /app

# ğŸ”§ Install minimal build deps
RUN apk add --no-cache python3 py3-pip make g++ linux-headers curl

# ğŸ“¦ Copy backend files
COPY package*.json ./
COPY src ./src

# âœ… Skip lockfile requirement
RUN npm install --omit=dev

ENV NODE_ENV=production
ENV IS_LOCAL=false

EXPOSE 5050

# ğŸ” Healthcheck ping
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:5050/health || exit 1

# ğŸš€ App entrypoint â€” this file exists!
CMD ["node", "src/index.js"]
